@model SystemWebDorms.Areas.Admin.ViewModels.VM_MasterSlider

@{
    ViewData["Title"] = "Create";
}

<div class="pagetitle">
    <h1>Master Slider</h1>
    <hr />
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterSlider">Manage Slider</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<hr />
<section class="section">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <br />
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div class="row">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>




                            <div class="form-group row mb-3 col-md-6">
                                <label asp-for="MasterSliderTitle" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">
                                    <input asp-for="MasterSliderTitle" class="form-control" />
                                    <span asp-validation-for="MasterSliderTitle" class="text-danger"></span>
                                </div>
                            </div>
                           
                            <div class="form-group row mb-3 col-md-6">
                                <label asp-for="MasterSliderImageUrl" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">
                                    <input asp-for="File" class="form-control" required />
                                    <span asp-validation-for="File" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group " style="direction:rtl;">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-primary">Back to List</a>

                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>

</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
