@model IEnumerable<SystemWebDorms.Models.MasterDorm>

@{
    ViewData["Title"] = "Index";
}
<div class="pagetitle">
    <h1>Master Dorm</h1>
    <hr />
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item">Master Dorm</li>
            <li class="breadcrumb-item active">Index</li>
        </ol>
    </nav>

</div>
<div class="r_dir">
    <a asp-action="Create" asp-controller="MasterDorm" value="Create" class="btn btn-primary ">Create</a>
</div>
<br />
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <table class="table datatable">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.MasterDormName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MasterDormBrief)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MasterDormLinkUrl)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MasterDormLinkMap)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MasterDormImage)
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsDelete)
                                    </th>*@
                                <th>Action</th>
                                <th>Edit</th>
                                <th>Details</th>
                                <th>Delete</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MasterDormName)
                                    </td>
                                    <td style="max-width:150px">
                                        @Html.DisplayFor(modelItem => item.MasterDormBrief)
                                    </td>
                                    <td style="max-width:100px">
                                        @Html.DisplayFor(modelItem => item.MasterDormLinkUrl)
                                    </td>
                                    <td  style="max-width:250px">
                                        @Html.DisplayFor(modelItem => item.MasterDormLinkMap)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.MasterDormImage)
                                        </td>*@
                                    <td>
                                        <img src="~/WebImages/MasterDorm/@item.MasterDormImage" alt="Alternate Text" style="  width:60px" />

                                    </td>

                                    @if (item.IsActive == true)
                                    {
                                        <td style="width:40px">
                                            <a asp-action="Active" asp-route-id="@item.MasterDormId" asp-controller="MasterDorm"><img src="~/images/Icons/IconActive1.png" style="margin-left: 10px; width: 25px " class="center" onclick="Active(@item.MasterDormId)" /></a>
                                        </td>
                                    }

                                    else if (item.IsActive == false)
                                    {
                                        <td style="width:40px">
                                            <a asp-action="Active" asp-route-id="@item.MasterDormId" asp-controller="MasterDorm"><img src="~/images/Icons/IconNotActive1.png" style="margin-left: 10px; width: 25px " class="center" onclick="Active(@item.MasterDormId)" /></a>
                                        </td>

                                    }

                                    <td style="width: 40px">
                                        <a asp-action="Edit" asp-route-id="@item.MasterDormId" asp-controller="MasterDorm"><img src="~/images/Icons/IconEdit.png" style="margin-left: 10px; width: 25px " class="center" /></a>
                                    </td>

                                    <td style="width: 40px">
                                        <a asp-action="Details" asp-route-id="@item.MasterDormId" asp-controller="MasterDorm"><img src="~/images/Icons/IconDetails.png" style="margin-left: 15px; width: 25px" class="center" /></a>
                                    </td>

                                    @*<td style="width:40px">
                                            <a asp-action="Delete" asp-route-id="@item.MasterDormId" asp-controller="MasterDorm"><img src="~/images/Icons/IconDelete.png" style="margin-left: 10px; width: 25px " class="center MsgDeletAcc" /></a>
                                        </td>*@
                                    <td class="td_option">
                                        <a id="myModal" class="deleteItem" href="#" data-target="#basic"
                                           data-toggle="modal"
                                           data-path="@Url.Action("Delete","MasterDorm", new { id = @item.MasterDormId }) ">
                                            <img src="~/images/Icons/IconDelete.png" title="delete" height="25" />
                                        </a>
                                    </td>

                                    @*<td>
                                            <a asp-action="Edit" asp-route-id="@item.MasterDormId">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.MasterDormId">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.MasterDormId">Delete</a>
                                        </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                <button id="btnContinueDelete" type="button" class="btn btn-primary">Delete</button>
            </div>
        </div>
    </div>
</div>