@model SystemWebDorms.Models.MasterMenu

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <h1>Master Menu</h1>
    <hr />
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterMenu">Manage Menu</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<hr />
<section class="section">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <br />
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div class="row">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="MasterMenuId" />

                            <div class="form-group row mb-3 col-md-6">
                                <label asp-for="MasterDormId" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">
                                    <select asp-for="MasterDormId" class="form-control" asp-items="@(new SelectList(ViewBag.AA,"MasterDormId","MasterDormName"))"></select>
                                    @*<select asp-for="MasterDormId"
                        asp-items="@(new SelectList(Model.ListMasterDorm,"MasterDormId","MasterDormName"))"
                        class="form-control">
                </select>*@
                                </div>
                            </div>

                            <div class="form-group row mb-3 col-md-6">
                                <label asp-for="MasterMenuName" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">
                                    <input asp-for="MasterMenuName" class="form-control" />
                                    <span asp-validation-for="MasterMenuName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row mb-3 col-md-6">
                                <label asp-for="MasterMenuLinkUrl" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">
                                    <input asp-for="MasterMenuLinkUrl" class="form-control" />
                                    <span asp-validation-for="MasterMenuLinkUrl" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row mb-3 col-md-6">
                                <label asp-for="MasterMenuDropMenu" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">
                                    <input asp-for="MasterMenuDropMenu" class="form-control" />
                                    <span asp-validation-for="MasterMenuDropMenu" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3 col-md-6 ">
                                <label asp-for="MasterMenuDropMenuLink" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">

                                    <input asp-for="MasterMenuDropMenuLink" class="form-control" />
                                    <span asp-validation-for="MasterMenuDropMenuLink" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group " style="direction:rtl;">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-primary">Back to List</a>

                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>

</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
