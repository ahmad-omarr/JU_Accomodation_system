                                <div class="col-sm-9">
                                    <input asp-for="TransAndalusDormDoubleRoomLinkUrl" class="form-control" />
                                    <span asp-validation-for="TransAndalusDormDoubleRoomLinkUrl" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row mb-3 col-md-6">
                                <label asp-for="TransAndalusDormDoubleRoomImage" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">
                                    <input asp-for="File_Andalus" class="form-control" required />
                                    <span asp-validation-for="File_Andalus" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group " style="direction:rtl;">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-primary">Back to List</a>

                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
