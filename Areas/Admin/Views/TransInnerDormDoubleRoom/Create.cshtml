                                    </select>
                                </div>
                            </div>

                            <div class="form-group row mb-3 col-md-6">
                                <label asp-for="TransZahraaDormDoubleRoomTitle" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">
                                    <input asp-for="TransZahraaDormDoubleRoomTitle" class="form-control" />
