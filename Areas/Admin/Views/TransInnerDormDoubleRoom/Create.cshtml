                            </div>
                            <div class="form-group row mb-3 col-md-6">
                                <label asp-for="TransAndalusDormDoubleRoomBrief" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">
                                    <input asp-for="TransAndalusDormDoubleRoomBrief" class="form-control" />
                                    <span asp-validation-for="TransAndalusDormDoubleRoomBrief" class="text-danger"></span>
