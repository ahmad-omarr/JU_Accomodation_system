                                <div class="col-sm-9">
                                    <input asp-for="TransZahraaDormDoubleRoomLinkUrl" class="form-control" />
                                    <span asp-validation-for="TransZahraaDormDoubleRoomLinkUrl" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row mb-3 col-md-6">
                                <label asp-for="TransZahraaDormDoubleRoomImage" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">
