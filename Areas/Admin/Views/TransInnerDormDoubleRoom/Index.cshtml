@model IEnumerable<SystemWebDorms.Models.TransInnerDormDoubleRoom>

@{
    ViewData["Title"] = "Index";
}

<div class="pagetitle">
    <h1>Inner Dorm Double Room</h1>
    <hr />
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item ">Inner Dorm Double Room</li>
            <li class="breadcrumb-item active">Index</li>
        </ol>
    </nav>

</div>
<div class="r_dir">
    <a asp-action="Create" asp-controller="TransInnerDormDoubleRoom" value="Create" class="btn btn-primary ">Create</a>
</div>
<br />
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.MasterDorm.MasterDormName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransZahraaDormDoubleRoomTitle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransZahraaDormDoubleRoomBrief)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.TransZahraaDormDoubleRoomLinkUrl)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransZahraaDormDoubleRoomImage)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransAndalusDormDoubleRoomTitle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransAndalusDormDoubleRoomBrief)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransAndalusDormDoubleRoomImage)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TransAndalusDormDoubleRoomLinkUrl)
                                </th>


                                <th>Action</th>
                                <th>Edit </th>
                                <th>Details</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.MasterDorm.MasterDormName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TransZahraaDormDoubleRoomTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TransZahraaDormDoubleRoomBrief)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TransZahraaDormDoubleRoomLinkUrl)
                                </td>
                                @*<td>
            @Html.DisplayFor(modelItem => item.TransZahraaDormDoubleRoomImage)
        </td>*@
                                <td>
                                    <img src="~/WebImages/TransInnerDormDoubleRoom/@item.TransZahraaDormDoubleRoomImage" alt="Alternate Text" style="  width:60px" />

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TransAndalusDormDoubleRoomTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TransAndalusDormDoubleRoomBrief)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TransAndalusDormDoubleRoomLinkUrl)
                                </td>
                                @*<td>
            @Html.DisplayFor(modelItem => item.TransAndalusDormDoubleRoomImage)
        </td>*@
                                <td>
                                    <img src="~/WebImages/TransInnerDormDoubleRoom/@item.TransAndalusDormDoubleRoomImage" alt="Alternate Text" style="  width:60px" />

                                </td>

                                @if (item.IsActive == true)
                                {
                                    <td style="width:40px">
                                        <a asp-action="Active" asp-route-id="@item.TransInnerDormDoubleRoomId" asp-controller="TransInnerDormDoubleRoom"><img src="~/images/Icons/IconActive1.png" style="margin-left: 10px; width: 25px " class="center" onclick="Active(@item.TransInnerDormDoubleRoomId)" /></a>
                                    </td>
                                }

                                else if (item.IsActive == false)
                                {
                                    <td style="width:40px">
                                        <a asp-action="Active" asp-route-id="@item.TransInnerDormDoubleRoomId" asp-controller="TransInnerDormDoubleRoom"><img src="~/images/Icons/IconNotActive1.png" style="margin-left: 10px; width: 25px " class="center" onclick="Active(@item.TransInnerDormDoubleRoomId)" /></a>
                                    </td>

                                }

                                <td style="width: 40px">
                                    <a asp-action="Edit" asp-route-id="@item.TransInnerDormDoubleRoomId" asp-controller="TransInnerDormDoubleRoom"><img src="~/images/Icons/IconEdit.png" style="margin-left: 10px; width: 25px " class="center" /></a>
                                </td>

                                <td style="width: 40px">
                                    <a asp-action="Details" asp-route-id="@item.TransInnerDormDoubleRoomId" asp-controller="TransInnerDormDoubleRoom"><img src="~/images/Icons/IconDetails.png" style="margin-left: 15px; width: 25px" class="center" /></a>
                                </td>
                                <td class="td_option">
                                    <a id="myModal" class="deleteItem" href="#" data-target="#basic"
                                       data-toggle="modal"
                                       data-path="@Url.Action("Delete","TransInnerDormDoubleRoom", new { id = @item.TransInnerDormDoubleRoomId }) ">
                                        <img src="~/images/Icons/IconDelete.png" title="delete" height="25" />
                                    </a>
                                </td>

                            </tr>
                    }
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="basic" tabindex="-1" role="list" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                <button id="btnContinueDelete" type="button" class="btn btn-primary">Delete</button>
            </div>
        </div>
    </div>
</div>