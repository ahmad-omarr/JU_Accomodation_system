<!-- start landing -->
<div class="landind">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>

        </div>
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="2000">
                 <img src="~/lib/images/landing.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block" style="left: 50%;
        transform: translateX(-50%);top: 25%;">
                <h5 class="bg-white text-black  opacity-75 fs-3 pt-5 pb-5 text-capitalize">Welcome to the student <br class="mt-5" />dormitory website</h5>
            </div>
            </div>

            @foreach (var item in Model.ListMasterSlider)
            {
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="~/WebImages/MasterSlider/@item.MasterSliderImageUrl" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block" style="left: 50%;
            transform: translateX(-50%);top: 25%;">
                        <h5 class="bg-white text-black  opacity-75 fs-3 pt-5 pb-5 text-capitalize ">@Html.Raw(item.MasterSliderTitle)</h5>
                    </div>
                </div>
            }


           
        </div>
    </div>
</div>
<!-- end landing -->
<!-- Start dorms -->
<div class="dorms">
    <div class="container  mt-5 mb-5">
        <div class="spical-heder mb-5 text-center">
            <h2>@Model.SystemSetting.SystemSettingTitleDorm</h2>
            <p class="text-black-50">
                @Model.SystemSetting.SystemSettingBriefDorm
            </p>
        </div>
        <div class="row">
            @foreach (var item in Model.ListMasterDorm)
            {
                <div class="col-lg-3 col-md-6 text-center mb-5 shadow p-3 mb-5 bg-body rounded">
