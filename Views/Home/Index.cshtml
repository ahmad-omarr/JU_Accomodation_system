                        <img class="img-fluid w-100 images" src="~/WebImages/MasterDorm/@item.MasterDormImage" alt="" />
                        <h3 class="mt-3">@item.MasterDormName</h3>
                        <p class="text-black-50 p-3 text-md-start">
                            @item.MasterDormBrief
                        </p>

                        <a class="btn bg-danger text-light rounded-pill main-btn mb-4 " href="@item.MasterDormLinkUrl">ReadMore</a>
                        <a class="btn bg-dark text-light rounded-pill main-btn mb-4 " href="@item.MasterDormLinkMap">Map</a>

                    </div>
                </div>
            }

