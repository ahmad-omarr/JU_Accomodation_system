@model SystemWebDorms.ViewModels.VM_Front

@{
    ViewData["Title"] = "Index";
}

<!-- Start dorms -->
<div class="dorms mt-5 mb-5">
    <div class="container">
        <div class="spical-heder mb-5 text-center">
            <h1>@Model.SystemSetting.SystemSettingAmmonDorm</h1>
        </div>
        <!-- start single room  -->
        <div class="row">
            <h3 class="text-black-50 mb-5">
                <i class="fa-solid fa-plus"></i> single room
            </h3>
            @foreach (var item in Model.ListTransInternationalDormSingleRoom)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 text-center pl-5 mb-5">
                    <div class="bg-light image">
                        <img class="img-fluid images" src="~/WebImages/TransInternationalDormSingleRoom/@item.TransAmmonDormSingleRoomImage" alt="" />
                        <h3>@item.TransAmmonDormSingleRoomTitle</h3>
                        <p class="Brief text-center p-2">
                            @item.TransAmmonDormSingleRoomBrief
                        </p>
                        <h3 class="mt-3">@item.TransAmmonDormSingleRoomLinkUrl</h3>
                        <a class="btn rounded-pill main-btn mb-4" href="">payment</a>
                    </div>
                </div>

            }

        </div>
        <!-- End single room   -->
        <!-- start Double room (two sisters)  -->

        <div class="row mt-5">
            <h3 class="text-black-50 mb-5">
                <i class="fa-solid fa-plus"></i> Double room (two sisters)
            </h3>
            @foreach (var item in Model.ListTransInternationalDormDoubleRoomSister)
